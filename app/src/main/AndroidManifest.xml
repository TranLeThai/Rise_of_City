<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rise_of_city">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:enableOnBackInvokedCallback="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rise_of_City">



        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.game.ingame.InGameActivity"
            android:exported="false" />

        <activity android:name=".ui.auth.SignUpActivity" />

        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.lesson.LessonActivity"
            android:exported="false"
            android:screenOrientation="landscape" />

        <activity android:name=".ui.assessment.KnowledgeSurveyActivity" />
        <activity android:name=".ui.profile.EditProfileActivity" />
        <activity android:name=".ui.settings.SettingsActivity" />

    </application>
</manifest>