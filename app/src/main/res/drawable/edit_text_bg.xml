<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền trắng -->
    <solid android:color="@color/white"/>

    <!-- Viền -->
    <stroke
        android:width="2dp"
        android:color="#4CAF50" />

    <!-- Bo góc -->
    <corners android:radius="8dp" />

    <!-- Padding -->
    <padding
        android:left="16dp"
        android:top="14dp"
        android:right="16dp"
        android:bottom="14dp" />

</shape>
