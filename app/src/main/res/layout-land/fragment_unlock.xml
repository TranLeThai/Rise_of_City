<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="12dp">

    <!-- Banner Tiền - Số tiền còn lại -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EDCC90"
        app:cardCornerRadius="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iv_coin"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_coin"
                android:contentDescription="Coin icon"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tiền còn lại"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_marginEnd="6dp" />

            <ImageView
                android:id="@+id/iv_plus"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_plus"
                android:contentDescription="Add money"
                android:tint="#FF0000" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Building Card - White card với building details - Landscape: bố cục ngang -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_building"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/card_money"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Nút X (Close) - Bên trong khung trắng, góc trên bên phải -->
            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Close button"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:tint="#000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Building Name và Level Badge - Landscape: ở trên cùng, bên trái -->
            <LinearLayout
                android:id="@+id/name_level_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_close">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tv_building_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thư Viện"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LV. 5"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_level_badge"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Building Illustration - Landscape: bên trái, dưới title -->
            <ImageView
                android:id="@+id/iv_building"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/vector_library"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/name_level_layout"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Production Info - Landscape: bên phải building image -->
            <TextView
                android:id="@+id/tv_production"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sản xuất: 50 Kinh nghiệm/giờ"
                android:textSize="13sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@id/iv_building"
                app:layout_constraintBottom_toBottomOf="@id/iv_building"
                app:layout_constraintStart_toEndOf="@id/iv_building"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Buttons: Thu Hoạch và Nâng Cấp - Landscape: dưới cùng -->
            <LinearLayout
                android:id="@+id/buttons_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/iv_building"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/btn_harvest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thu Hoạch"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_harvest"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/btn_upgrade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nâng Cấp"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_upgrade"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
