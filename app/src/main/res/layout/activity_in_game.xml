<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/vertical_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="-118dp"
        tools:layout_editor_absoluteY="30dp">

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_map_background"
                    android:layout_width="1500dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    android:src="@drawable/bg_map1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/school"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="559dp"
                    android:layout_marginTop="264dp"
                    android:layout_marginEnd="841dp"
                    app:layout_constraintEnd_toEndOf="@+id/img_map_background"
                    app:layout_constraintStart_toStartOf="@+id/img_map_background"
                    app:layout_constraintTop_toTopOf="@+id/img_map_background"
                    app:srcCompat="@drawable/vector_school" />

                <ImageView
                    android:id="@+id/library"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="488dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_map_background"
                    app:layout_constraintVertical_bias="0.472"
                    app:srcCompat="@drawable/vector_library" />

                <ImageView
                    android:id="@+id/park"
                    android:layout_width="150dp"
                    android:layout_height="152dp"
                    android:layout_marginStart="632dp"
                    android:layout_marginEnd="688dp"
                    android:layout_marginBottom="368dp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_map_background"
                    app:layout_constraintEnd_toEndOf="@+id/img_map_background"
                    app:layout_constraintHorizontal_bias="0.533"
                    app:layout_constraintStart_toStartOf="@+id/img_map_background"
                    app:srcCompat="@drawable/vector_park_lock" />

                <ImageView
                    android:id="@+id/farmer"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="564dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_map_background"
                    app:layout_constraintVertical_bias="0.583"
                    app:srcCompat="@drawable/vector_farmer_lock" />

                <ImageView
                    android:id="@+id/coffee"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="619dp"
                    android:layout_marginTop="212dp"
                    android:layout_marginEnd="706dp"
                    app:layout_constraintEnd_toEndOf="@+id/img_map_background"
                    app:layout_constraintHorizontal_bias="0.693"
                    app:layout_constraintStart_toStartOf="@+id/img_map_background"
                    app:layout_constraintTop_toTopOf="@+id/img_map_background"
                    app:srcCompat="@drawable/vector_coffee_lock" />

                <ImageView
                    android:id="@+id/clothers"
                    android:layout_width="118dp"
                    android:layout_height="126dp"
                    android:layout_marginStart="733dp"
                    android:layout_marginTop="392dp"
                    android:layout_marginEnd="592dp"
                    app:layout_constraintEnd_toEndOf="@+id/img_map_background"
                    app:layout_constraintHorizontal_bias="0.877"
                    app:layout_constraintStart_toStartOf="@+id/img_map_background"
                    app:layout_constraintTop_toTopOf="@+id/img_map_background"
                    app:srcCompat="@drawable/vector_clothers_lock" />

                <ImageView
                    android:id="@+id/bakery"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="900dp"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_map_background"
                    app:layout_constraintVertical_bias="0.511"
                    app:srcCompat="@drawable/vector_bakery_lock" />

                <ImageView
                    android:id="@+id/house"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="672dp"
                    android:layout_marginTop="428dp"
                    android:layout_marginEnd="728dp"
                    app:layout_constraintEnd_toEndOf="@+id/img_map_background"
                    app:layout_constraintStart_toStartOf="@+id/img_map_background"
                    app:layout_constraintTop_toTopOf="@+id/img_map_background"
                    app:srcCompat="@drawable/vector_house_lock" />

                <ImageView
                    android:id="@+id/tree"
                    android:layout_width="141dp"
                    android:layout_height="143dp"
                    android:layout_marginStart="783dp"
                    android:layout_marginTop="228dp"
                    android:layout_marginEnd="576dp"
                    app:layout_constraintEnd_toEndOf="@+id/img_map_background"
                    app:layout_constraintStart_toStartOf="@+id/img_map_background"
                    app:layout_constraintTop_toTopOf="@+id/img_map_background"
                    app:srcCompat="@drawable/vector_tree" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#DBB693"
        android:orientation="vertical"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EDCC90"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_coin" />

            <TextView
                android:id="@+id/count_coin"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số tiền còn lại" />

            <ImageView
                android:id="@+id/plus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_plus" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/money"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:srcCompat="@drawable/ic_money" />

    <ImageView
        android:id="@+id/mission"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/money"
        app:srcCompat="@drawable/icon_mission" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_building_menu"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/bg_white_rounded"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_menu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:padding="8dp"
            android:text="Trường học"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_menu_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Level 1"
            android:textColor="#FF9800"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_menu_name" />

        <ProgressBar
            android:id="@+id/pb_menu_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:max="100"
            android:progress="50"
            android:progressTint="#4CAF50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_menu_level" />

        <TextView
            android:id="@+id/tv_menu_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50/100"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/pb_menu_progress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_menu_progress_text">

            <Button
                android:id="@+id/btn_menu_upgrade"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Nâng cấp"
                android:textSize="12sp"
                android:backgroundTint="#4CAF50" />

            <Button
                android:id="@+id/btn_menu_mission"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Ôn tập ngay!"
                android:textSize="12sp"
                android:backgroundTint="#F44336"
                android:visibility="gone"/> </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Fragment Container cho UnlockFragment -->
    <FrameLayout
        android:id="@+id/fragment_unlock_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>