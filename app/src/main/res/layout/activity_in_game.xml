<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        tools:layout_editor_absoluteX="-118dp"
        tools:layout_editor_absoluteY="30dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_map_background"
                    android:layout_width="1500dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    android:src="@drawable/bg_map1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/school"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="559dp"
                    android:layout_marginTop="264dp"
                    android:layout_marginEnd="841dp"
                    app:layout_constraintEnd_toEndOf="@+id/img_map_background"
                    app:layout_constraintStart_toStartOf="@+id/img_map_background"
                    app:layout_constraintTop_toTopOf="@+id/img_map_background"
                    app:srcCompat="@drawable/vector_school_lock" />

                <ImageView
                    android:id="@+id/library"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="488dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_map_background"
                    app:layout_constraintVertical_bias="0.472"
                    app:srcCompat="@drawable/vector_library_lock" />

                <ImageView
                    android:id="@+id/park"
                    android:layout_width="150dp"
                    android:layout_height="152dp"
                    android:layout_marginStart="632dp"
                    android:layout_marginEnd="688dp"
                    android:layout_marginBottom="368dp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_map_background"
                    app:layout_constraintEnd_toEndOf="@+id/img_map_background"
                    app:layout_constraintHorizontal_bias="0.533"
                    app:layout_constraintStart_toStartOf="@+id/img_map_background"
                    app:srcCompat="@drawable/vector_park_lock" />

                <ImageView
                    android:id="@+id/farmer"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="564dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_map_background"
                    app:layout_constraintVertical_bias="0.583"
                    app:srcCompat="@drawable/vector_farmer_lock" />

                <ImageView
                    android:id="@+id/coffee"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="619dp"
                    android:layout_marginTop="212dp"
                    android:layout_marginEnd="706dp"
                    app:layout_constraintEnd_toEndOf="@+id/img_map_background"
                    app:layout_constraintHorizontal_bias="0.693"
                    app:layout_constraintStart_toStartOf="@+id/img_map_background"
                    app:layout_constraintTop_toTopOf="@+id/img_map_background"
                    app:srcCompat="@drawable/vector_coffee_lock" />

                <ImageView
                    android:id="@+id/clothers"
                    android:layout_width="118dp"
                    android:layout_height="126dp"
                    android:layout_marginStart="733dp"
                    android:layout_marginTop="392dp"
                    android:layout_marginEnd="592dp"
                    app:layout_constraintEnd_toEndOf="@+id/img_map_background"
                    app:layout_constraintHorizontal_bias="0.877"
                    app:layout_constraintStart_toStartOf="@+id/img_map_background"
                    app:layout_constraintTop_toTopOf="@+id/img_map_background"
                    app:srcCompat="@drawable/vector_clothers_lock" />

                <ImageView
                    android:id="@+id/bakery"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="900dp"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_map_background"
                    app:layout_constraintVertical_bias="0.511"
                    app:srcCompat="@drawable/vector_bakery_lock" />

                <ImageView
                    android:id="@+id/house"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="672dp"
                    android:layout_marginTop="428dp"
                    android:layout_marginEnd="728dp"
                    app:layout_constraintEnd_toEndOf="@+id/img_map_background"
                    app:layout_constraintStart_toStartOf="@+id/img_map_background"
                    app:layout_constraintTop_toTopOf="@+id/img_map_background"
                    app:srcCompat="@drawable/vector_house_lock" />

                <ImageView
                    android:id="@+id/tree"
                    android:layout_width="141dp"
                    android:layout_height="143dp"
                    android:layout_marginStart="783dp"
                    android:layout_marginTop="228dp"
                    android:layout_marginEnd="576dp"
                    app:layout_constraintEnd_toEndOf="@+id/img_map_background"
                    app:layout_constraintStart_toStartOf="@+id/img_map_background"
                    app:layout_constraintTop_toTopOf="@+id/img_map_background"
                    app:srcCompat="@drawable/vector_tree" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>