<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="#E0F7FA"
    android:padding="16dp">

    <!-- Nút X - Góc trên bên trái -->
    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_close"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Close button"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:tint="#9E9E9E"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- White Card chứa câu hỏi -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Text "Thử thách từ vựng" -->
            <TextView
                android:id="@+id/tv_challenge_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thử thách từ vựng"
                android:textSize="12sp"
                android:textColor="#9E9E9E"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Câu hỏi -->
            <TextView
                android:id="@+id/tv_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Từ nào có nghĩa là 'Ngôi Nhà'?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_challenge_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Hình ảnh minh họa - Thu nhỏ lại để hiển thị đầy đủ đáp án -->
            <ImageView
                android:id="@+id/iv_illustration"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/vector_house"
                android:scaleType="fitCenter"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="Illustration"
                app:layout_constraintTop_toBottomOf="@id/tv_question"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Grid 2x2 cho các đáp án - Bố cục đều nhau -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_answers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="false"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Answer Button 1: HOUSE -->
        <Button
            android:id="@+id/btn_answer1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="HOUSE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:background="@drawable/bg_answer_button"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="0" />

        <!-- Answer Button 2: MOUSE -->
        <Button
            android:id="@+id/btn_answer2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="MOUSE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:background="@drawable/bg_answer_button"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="0" />

        <!-- Answer Button 3: HORSE -->
        <Button
            android:id="@+id/btn_answer3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="HORSE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:background="@drawable/bg_answer_button"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="1" />

        <!-- Answer Button 4: HOSE -->
        <Button
            android:id="@+id/btn_answer4"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="HOSE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:background="@drawable/bg_answer_button"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>

    <!-- Nút KIỂM TRA màu xanh lá -->
    <Button
        android:id="@+id/btn_check"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="KIỂM TRA"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button_check"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
