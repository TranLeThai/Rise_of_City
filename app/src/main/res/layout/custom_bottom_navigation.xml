<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_bottom_nav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center">

    <!-- Home -->
    <LinearLayout
        android:id="@+id/nav_item_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/nav_icon_home"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/nav_text_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Search/Friends -->
    <LinearLayout
        android:id="@+id/nav_item_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/nav_icon_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/nav_text_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn bè"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Roadmap -->
    <LinearLayout
        android:id="@+id/nav_item_explore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/nav_icon_explore"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_compass"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/nav_text_explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roadmap"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Chat AI -->
    <LinearLayout
        android:id="@+id/nav_item_chat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/nav_icon_chat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chat"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/nav_text_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat AI"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Profile -->
    <LinearLayout
        android:id="@+id/nav_item_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/nav_icon_profile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_user"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/nav_text_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- New Screen -->
    <LinearLayout
        android:id="@+id/nav_item_new_screen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/nav_icon_new_screen"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_settings"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/nav_text_new_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mới"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Vocab Match -->
    <LinearLayout
        android:id="@+id/nav_item_vocab_match"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/nav_icon_vocab_match"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_book"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/nav_text_vocab_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vocab"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>
