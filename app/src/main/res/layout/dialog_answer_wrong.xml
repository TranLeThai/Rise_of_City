<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_margin="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header màu hồng nhạt -->
        <View
            android:id="@+id/header_background"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="#FFE0E0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title "TIẾC QUÁ!" màu đỏ -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIẾC QUÁ!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#F44336"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/header_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Box hiển thị đáp án đúng -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_correct_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F5F5F5"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đáp án đúng là:"
                    android:textSize="14sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_correct_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="House (Ngôi nhà)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Nút "ĐÃ HIỂU" màu đỏ -->
        <Button
            android:id="@+id/btn_understood"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="ĐÃ HIỂU"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_wrong"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/card_correct_answer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
