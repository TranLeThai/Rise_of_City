<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_white"
    android:padding="24dp"
    android:elevation="8dp">

    <!-- Icon Padlock -->
    <ImageView
        android:id="@+id/iv_lock_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_lock_red"
        android:contentDescription="Lock icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title: Khu Vực Bị Khóa -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khu Vực Bị Khóa"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_lock_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hoàn thành bài học 'Thì hiện tại đơn' để mở khóa cửa hàng này."
        android:textSize="14sp"
        android:textColor="#757575"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button: Mở Khóa Bằng Vàng -->
    <Button
        android:id="@+id/btn_unlock_with_gold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mở Khóa (50 Vàng)"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/bg_button_learn_now"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button: Học Ngay -->
    <Button
        android:id="@+id/btn_learn_now"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Học Ngay"
        android:textColor="#3FD0F1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_unlock_with_gold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button: Đóng -->
    <TextView
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đóng"
        android:textSize="14sp"
        android:textColor="#757575"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_learn_now"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>