<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pink_grid"
    android:padding="16dp">

    <!-- Header: Lecture và Timer -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Lecture text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lecture"
            android:textSize="16sp"
            android:textColor="#2196F3"
            android:layout_marginEnd="16dp" />

        <!-- Timer Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_stopwatch"
                android:tint="#000000"
                android:contentDescription="Timer" />

            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:15"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_timer"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:max="15"
            android:progress="15"
            android:progressTint="#757575"
            android:progressBackgroundTint="#E0E0E0"
            android:layout_marginStart="8dp" />

        <!-- Title: Thanh tra hợp đồng -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh tra hợp đồng"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:layout_marginStart="16dp" />

        <!-- Settings Icon -->
        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            android:tint="#000000"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Container cho document và answers (layout ngang - không chồng) -->
    <LinearLayout
        android:id="@+id/main_content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Document Box (màu vàng nhạt với border tím đứt nét) - chiếm 60% -->
        <FrameLayout
            android:id="@+id/card_document"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_light_yellow_box">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_dashed_border_purple"
                android:padding="16dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <TextView
                        android:id="@+id/tv_document_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dear Mayor,\n\nThe bakery project is ready for launch..."
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:lineSpacingMultiplier="1.2" />
                </ScrollView>

                <!-- Speech bubble icon ở góc trên bên phải -->
                <ImageButton
                    android:id="@+id/btn_translate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_chat"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:tint="#9C27B0"
                    android:contentDescription="Translation" />
            </FrameLayout>
        </FrameLayout>

        <!-- Answers Container - bên phải, chiếm 40% -->
        <LinearLayout
            android:id="@+id/answers_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingStart="8dp">

            <Button
                android:id="@+id/btn_answer1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Flour, are baking"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_answer_overlay"
                android:layout_marginBottom="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/btn_answer2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Flower, is baking"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_answer_overlay"
                android:layout_marginBottom="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/btn_answer3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Flour, is baking"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_answer_overlay"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
