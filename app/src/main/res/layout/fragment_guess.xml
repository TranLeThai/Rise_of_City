<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8E6C9"
    android:padding="16dp">

    <!-- Title: Guess -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#424242"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Timer Container -->
    <LinearLayout
        android:id="@+id/timer_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_stopwatch"
            android:tint="#000000"
            android:contentDescription="Timer" />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:15"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_timer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:max="15"
        android:progress="15"
        android:progressTint="#757575"
        android:progressBackgroundTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/timer_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Settings Icon -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_settings"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Settings"
        android:tint="#2E7D32"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrambled Word Display (Oval shape) - nằm trong khung -->
    <FrameLayout
        android:id="@+id/scrambled_word_container"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_guess_oval"
        app:layout_constraintTop_toBottomOf="@id/progress_timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/answer_input_container">

        <TextView
            android:id="@+id/tv_scrambled_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n/g/E/h/l/i/s"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:layout_gravity="center"
            android:gravity="center" />
    </FrameLayout>

    <!-- Answer Input Field (Oval shape with border) - ở dưới, chiếm phần còn lại -->
    <FrameLayout
        android:id="@+id/answer_input_container"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_guess_input_oval"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/scrambled_word_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/et_answer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter the answer"
            android:textSize="18sp"
            android:textColor="#424242"
            android:textColorHint="#757575"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:padding="16dp"
            android:inputType="text"
            android:textStyle="bold" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

