<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4EC"
    android:padding="16dp">

    <!-- Subtitle: House, Library -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="House, Library"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title: House Decorate -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="House Decorate"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#424242"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Settings Icon -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_settings"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Settings"
        android:tint="#424242"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sentence Banner -->
    <FrameLayout
        android:id="@+id/sentence_banner"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_guess_oval"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_sentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The bed is next to the window"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:gravity="center" />

        <!-- Speaker Icon (muted) -->
        <ImageButton
            android:id="@+id/btn_speaker"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_lock_silent_mode"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Speaker"
            android:tint="#757575"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp" />
    </FrameLayout>

    <!-- Room View Container -->
    <FrameLayout
        android:id="@+id/room_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/sentence_banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/furniture_panel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.7">

        <!-- Left Arrow -->
        <ImageButton
            android:id="@+id/btn_arrow_left"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_media_previous"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous"
            android:tint="#000000"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="8dp" />

        <!-- Room Image -->
        <ImageView
            android:id="@+id/iv_room"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#E8EAF6"
            android:contentDescription="Room view" />

        <!-- Right Arrow -->
        <ImageButton
            android:id="@+id/btn_arrow_right"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_media_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next"
            android:tint="#000000"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="8dp" />
    </FrameLayout>

    <!-- Furniture Panel (Yellow) -->
    <LinearLayout
        android:id="@+id/furniture_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFEB3B"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/sentence_banner"
        app:layout_constraintStart_toEndOf="@id/room_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25">

        <!-- Furniture Grid 2x2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/iv_furniture1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:contentDescription="Bed"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/iv_furniture2"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:contentDescription="Sofa"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_furniture3"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:contentDescription="Armchair"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/iv_furniture4"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:contentDescription="Desk"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

