<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C27B0"
    android:padding="16dp">

    <!-- Title: Image-Match -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image-Match"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Timer Container -->
    <LinearLayout
        android:id="@+id/timer_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_stopwatch"
            android:tint="#000000"
            android:contentDescription="Timer" />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:15"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_timer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:max="15"
        android:progress="15"
        android:progressTint="#E0E0E0"
        android:progressBackgroundTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/timer_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Settings Icon -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_settings"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Settings"
        android:tint="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Left Column: Image Cards -->
    <LinearLayout
        android:id="@+id/left_column"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/progress_timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/right_column"
        app:layout_constraintWidth_percent="0.48">

        <!-- Image Card 1 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_white_rounded"
            android:elevation="4dp">

            <Button
                android:id="@+id/btn_image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Image 1"
                android:textSize="16sp"
                android:textColor="#424242"
                android:background="@drawable/bg_answer_green"
                android:gravity="center" />
        </FrameLayout>

        <!-- Image Card 2 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_white_rounded"
            android:elevation="4dp">

            <Button
                android:id="@+id/btn_image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Image 2"
                android:textSize="16sp"
                android:textColor="#424242"
                android:background="@drawable/bg_answer_green"
                android:gravity="center" />
        </FrameLayout>

    </LinearLayout>

    <!-- Right Column: Text Cards -->
    <LinearLayout
        android:id="@+id/right_column"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/progress_timer"
        app:layout_constraintStart_toEndOf="@id/left_column"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.48">

        <!-- Text Card 1 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_purple_light_rounded"
            android:elevation="4dp">

            <Button
                android:id="@+id/btn_text1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Text 1"
                android:textSize="16sp"
                android:textColor="#424242"
                android:background="@drawable/bg_answer_green"
                android:gravity="center" />
        </FrameLayout>

        <!-- Text Card 2 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_purple_light_rounded"
            android:elevation="4dp">

            <Button
                android:id="@+id/btn_text2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Text 2"
                android:textSize="16sp"
                android:textColor="#424242"
                android:background="@drawable/bg_answer_green"
                android:gravity="center" />
        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

