<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp">

        <TextView
            android:id="@+id/tv_level_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Beginner Level"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Building 1: Nhà ở -->
        <include
            android:id="@+id/building_house"
            layout="@layout/item_roadmap_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_level_title" />

        <!-- Line 1 -->
        <View
            android:id="@+id/line_1"
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:background="#B0B0B0"
            app:layout_constraintEnd_toEndOf="@id/building_house"
            app:layout_constraintStart_toStartOf="@id/building_house"
            app:layout_constraintTop_toBottomOf="@id/building_house" />

        <!-- Building 2: Nông trại -->
        <include
            android:id="@+id/building_farm"
            layout="@layout/item_roadmap_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_1" />

        <!-- Line 2 -->
        <View
            android:id="@+id/line_2"
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:background="#B0B0B0"
            app:layout_constraintEnd_toEndOf="@id/building_farm"
            app:layout_constraintStart_toStartOf="@id/building_farm"
            app:layout_constraintTop_toBottomOf="@id/building_farm" />

        <!-- Building 3: Công viên -->
        <include
            android:id="@+id/building_park"
            layout="@layout/item_roadmap_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_2" />

        <!-- Line 3 -->
        <View
            android:id="@+id/line_3"
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:background="#B0B0B0"
            app:layout_constraintEnd_toEndOf="@id/building_park"
            app:layout_constraintStart_toStartOf="@id/building_park"
            app:layout_constraintTop_toBottomOf="@id/building_park" />

        <!-- Building 4: Trường học -->
        <include
            android:id="@+id/building_school"
            layout="@layout/item_roadmap_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_3" />

        <!-- Line 4 -->
        <View
            android:id="@+id/line_4"
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:background="#B0B0B0"
            app:layout_constraintEnd_toEndOf="@id/building_school"
            app:layout_constraintStart_toStartOf="@id/building_school"
            app:layout_constraintTop_toBottomOf="@id/building_school" />

        <!-- Building 5: Thư viện -->
        <include
            android:id="@+id/building_library"
            layout="@layout/item_roadmap_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_4" />

        <!-- Line 5 -->
        <View
            android:id="@+id/line_5"
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:background="#B0B0B0"
            app:layout_constraintEnd_toEndOf="@id/building_library"
            app:layout_constraintStart_toStartOf="@id/building_library"
            app:layout_constraintTop_toBottomOf="@id/building_library" />

        <!-- Building 6: Quán cà phê -->
        <include
            android:id="@+id/building_cafe"
            layout="@layout/item_roadmap_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_5" />

        <!-- Line 6 -->
        <View
            android:id="@+id/line_6"
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:background="#B0B0B0"
            app:layout_constraintEnd_toEndOf="@id/building_cafe"
            app:layout_constraintStart_toStartOf="@id/building_cafe"
            app:layout_constraintTop_toBottomOf="@id/building_cafe" />

        <!-- Building 7: Shop quần áo (Clothers) -->
        <include
            android:id="@+id/building_clothers"
            layout="@layout/item_roadmap_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_6" />

        <!-- Line 7 -->
        <View
            android:id="@+id/line_7"
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:background="#B0B0B0"
            app:layout_constraintEnd_toEndOf="@id/building_clothers"
            app:layout_constraintStart_toStartOf="@id/building_clothers"
            app:layout_constraintTop_toBottomOf="@id/building_clothers" />

        <!-- Building 8: Tiệm bánh (Bakery) -->
        <include
            android:id="@+id/building_bakery"
            layout="@layout/item_roadmap_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_7" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>