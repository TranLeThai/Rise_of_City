<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvLevelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEVEL: BEGINNER"
            android:textColor="#3FD0F1"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ProgressBar
            android:id="@+id/pbLevel"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="33"
            android:progressTint="#3FD0F1"
            android:backgroundTint="#E0E0E0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLevelName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/9 Thử thách hoàn thành"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/pbLevel"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp">

            <View
                android:layout_width="4dp"
                android:layout_height="100dp"
                android:background="#B2EBF2"
                android:rotation="20"
                app:layout_constraintTop_toBottomOf="@+id/btnStage1"
                app:layout_constraintStart_toStartOf="@+id/btnStage1"
                app:layout_constraintEnd_toEndOf="@+id/btnStage2"
                app:layout_constraintBottom_toTopOf="@+id/btnStage2"/>

            <View
                android:layout_width="4dp"
                android:layout_height="100dp"
                android:background="#B2EBF2"
                android:rotation="-20"
                app:layout_constraintTop_toBottomOf="@+id/btnStage2"
                app:layout_constraintStart_toStartOf="@+id/btnStage2"
                app:layout_constraintEnd_toEndOf="@+id/btnStage3"
                app:layout_constraintBottom_toTopOf="@+id/btnStage3"/>

            <View
                android:layout_width="4dp"
                android:layout_height="100dp"
                android:background="#E0E0E0"
                android:rotation="20"
                app:layout_constraintTop_toBottomOf="@+id/btnStage3"
                app:layout_constraintStart_toStartOf="@+id/btnStage3"
                app:layout_constraintEnd_toEndOf="@+id/btnStage4"
                app:layout_constraintBottom_toTopOf="@+id/btnStage4"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnStage1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                app:cardBackgroundColor="#3FD0F1"
                app:strokeWidth="4dp"
                app:strokeColor="#B2EBF2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    app:tint="#FFFFFF"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My House"
                android:textStyle="bold"
                android:textColor="#3FD0F1"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/btnStage1"
                app:layout_constraintStart_toStartOf="@id/btnStage1"
                app:layout_constraintEnd_toEndOf="@id/btnStage1"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                android:elevation="6dp"
                app:layout_constraintBottom_toBottomOf="@id/btnStage1"
                app:layout_constraintEnd_toEndOf="@id/btnStage1"
                app:tint="#4CAF50"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnStage2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="40dp"
                app:cardBackgroundColor="#3FD0F1"
                app:strokeWidth="4dp"
                app:strokeColor="#B2EBF2"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnStage1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:src="@android:drawable/ic_menu_call"
                    app:tint="#FFFFFF"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee Shop"
                android:textStyle="bold"
                android:textColor="#3FD0F1"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/btnStage2"
                app:layout_constraintStart_toStartOf="@id/btnStage2"
                app:layout_constraintEnd_toEndOf="@id/btnStage2"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                android:elevation="6dp"
                app:layout_constraintBottom_toBottomOf="@id/btnStage2"
                app:layout_constraintEnd_toEndOf="@id/btnStage2"
                app:tint="#4CAF50"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnStage3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="40dp"
                app:cardBackgroundColor="#3FD0F1"
                app:strokeWidth="4dp"
                app:strokeColor="#B2EBF2"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnStage2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    app:tint="#FFFFFF"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Library"
                android:textStyle="bold"
                android:textColor="#3FD0F1"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/btnStage3"
                app:layout_constraintStart_toStartOf="@id/btnStage3"
                app:layout_constraintEnd_toEndOf="@id/btnStage3"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                android:elevation="6dp"
                app:layout_constraintBottom_toBottomOf="@id/btnStage3"
                app:layout_constraintEnd_toEndOf="@id/btnStage3"
                app:tint="#4CAF50"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnStage4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="6dp"
                app:strokeColor="#3FD0F1"
                app:cardElevation="12dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnStage3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="25dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    app:tint="#3FD0F1"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Park"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_bubble_user"
                android:backgroundTint="#3FD0F1"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/btnStage4"
                app:layout_constraintStart_toStartOf="@id/btnStage4"
                app:layout_constraintEnd_toEndOf="@id/btnStage4"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnStage5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="40dp"
                app:cardBackgroundColor="#E0E0E0"
                app:strokeWidth="0dp"
                app:cardElevation="0dp"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnStage4">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp"
                    android:src="@android:drawable/ic_lock_lock"
                    app:tint="#9E9E9E"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School"
                android:textStyle="bold"
                android:textColor="#9E9E9E"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/btnStage5"
                app:layout_constraintStart_toStartOf="@id/btnStage5"
                app:layout_constraintEnd_toEndOf="@id/btnStage5"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnStage6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="45dp"
                app:cardBackgroundColor="#E0E0E0"
                app:strokeWidth="0dp"
                app:cardElevation="0dp"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnStage5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp"
                    android:src="@android:drawable/ic_lock_lock"
                    app:tint="#9E9E9E"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Castle"
                android:textStyle="bold"
                android:textColor="#9E9E9E"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/btnStage6"
                app:layout_constraintStart_toStartOf="@id/btnStage6"
                app:layout_constraintEnd_toEndOf="@id/btnStage6"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>