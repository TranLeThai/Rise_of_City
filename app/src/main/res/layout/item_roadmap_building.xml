<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- Connector line (nối với building tiếp theo) -->
    <View
        android:id="@+id/view_connector"
        android:layout_width="4dp"
        android:layout_height="60dp"
        android:background="#B2EBF2"
        android:rotation="20"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/card_building"
        app:layout_constraintStart_toStartOf="@id/card_building"
        app:layout_constraintEnd_toEndOf="@id/card_building" />

    <!-- Building Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_building"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="#3FD0F1"
        app:strokeWidth="4dp"
        app:strokeColor="#B2EBF2"
        app:cardElevation="8dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_building_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            android:src="@android:drawable/ic_menu_myplaces"
            app:tint="#FFFFFF" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Status Icon (check hoặc lock) -->
    <ImageView
        android:id="@+id/iv_status_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/card_building"
        app:layout_constraintEnd_toEndOf="@id/card_building"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp" />

    <!-- Building Name -->
    <TextView
        android:id="@+id/tv_building_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhà Của Tôi"
        android:textStyle="bold"
        android:textColor="#3FD0F1"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/card_building"
        app:layout_constraintStart_toStartOf="@id/card_building"
        app:layout_constraintEnd_toEndOf="@id/card_building" />

    <!-- Level -->
    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 1"
        android:textSize="12sp"
        android:textColor="#757575"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_building_name"
        app:layout_constraintStart_toStartOf="@id/tv_building_name"
        app:layout_constraintEnd_toEndOf="@id/tv_building_name" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/pb_exp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="50"
        android:progressTint="#3FD0F1"
        android:backgroundTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/tv_level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Text -->
    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50/100 EXP"
        android:textSize="11sp"
        android:textColor="#757575"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/pb_exp"
        app:layout_constraintStart_toStartOf="@id/pb_exp"
        app:layout_constraintEnd_toEndOf="@id/pb_exp" />

    <!-- Vocabulary Progress -->
    <TextView
        android:id="@+id/tv_vocabulary_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30/340 từ vựng"
        android:textSize="10sp"
        android:textColor="#9E9E9E"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_progress"
        app:layout_constraintStart_toStartOf="@id/tv_progress"
        app:layout_constraintEnd_toEndOf="@id/tv_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>

