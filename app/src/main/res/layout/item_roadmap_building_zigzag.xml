<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:minHeight="160dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Connector Line (nối trực tiếp từ node này đến node tiếp theo) -->
    <com.example.rise_of_city.ui.view.ConnectorLineView
        android:id="@+id/view_connector"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Building Card (Circular) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_building"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:cardBackgroundColor="#3FD0F1"
        app:strokeWidth="4dp"
        app:strokeColor="#B2EBF2"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5">

        <ImageView
            android:id="@+id/iv_building_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:scaleType="fitCenter" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Status Icon (checkmark hoặc lock) -->
    <ImageView
        android:id="@+id/iv_status_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/card_building"
        app:layout_constraintEnd_toEndOf="@id/card_building"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp" />

    <!-- Green Dot (cho completed buildings) -->
    <View
        android:id="@+id/view_green_dot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/bg_circle_green"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/card_building"
        app:layout_constraintEnd_toEndOf="@id/card_building"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp" />

    <!-- Building Name -->
    <TextView
        android:id="@+id/tv_building_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhà Của Tôi"
        android:textStyle="bold"
        android:textColor="#3FD0F1"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/card_building"
        app:layout_constraintStart_toStartOf="@id/card_building"
        app:layout_constraintEnd_toEndOf="@id/card_building" />

    <!-- Level -->
    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 1"
        android:textSize="11sp"
        android:textColor="#757575"
        android:gravity="center"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_building_name"
        app:layout_constraintStart_toStartOf="@id/tv_building_name"
        app:layout_constraintEnd_toEndOf="@id/tv_building_name" />

    <!-- Progress Info (EXP và Vocabulary) - Compact -->
    <LinearLayout
        android:id="@+id/ll_progress_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_level"
        app:layout_constraintStart_toStartOf="@id/tv_level"
        app:layout_constraintEnd_toEndOf="@id/tv_level">

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/100 EXP"
            android:textSize="9sp"
            android:textColor="#9E9E9E" />

        <TextView
            android:id="@+id/tv_vocabulary_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/340 từ vựng"
            android:textSize="9sp"
            android:textColor="#9E9E9E"
            android:layout_marginTop="2dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>